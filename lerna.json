{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.2.0",
  "npmClient": "pnpm",
  "command": {
    "create": {
      "homepage": "https://github.com/viarotel-org/packages#readme",
      "registry": "https://registry.npmjs.org/",
      "description": "viarotel's package",
      "access": "public",
      "private": false,
      "esModule": true,
      "yes": true
    },
    "publish": {
      "npmClient": "npm",
      "private": false,
      "tag": "latest",
      "loglevel": "verbose"
    },
    "version": {
      "ignoreChanges": [
        "**/__tests__/**",
        "**/*.md"
      ],
      "changelogPreset": "angular",
      "conventionalCommits": true,
      "changelog": true
    },
    "clean": {
      "yes": true
    }
  }
}
